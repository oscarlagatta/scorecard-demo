{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bofa/dashboard": ["libs/bps-scorecard/features/dashboard/src/index.ts"],
      "@bofa/data-access": ["libs/bps-scorecard/data-access/src/index.ts"],
      "@bofa/layout": ["libs/bps-scorecard/layout/src/index.ts"],
      "@bofa/layout-scorecard": [
        "libs/bps-scorecard/layout-scorecard/src/index.ts"
      ],
      "@bofa/metric-inventory": [
        "libs/bps-scorecard/features/metric-inventory/src/index.ts"
      ],
      "@bofa/playground": ["libs/playground/src/index.ts"],
      "@bofa/shadcn-ui": ["libs/shared/shadcn-ui/src/index.ts"],
      "@bofa/shadcn-ui-components": [
        "libs/shared/shadcn-ui-components/src/index.ts"
      ],
      "@bofa/ui": ["libs/bps-scorecard/ui/src/index.ts"],
      "@bofa/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
